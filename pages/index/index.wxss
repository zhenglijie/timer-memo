/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

page {
  background: #f6f6f6;
  height: 100%;
}

.add_icon{
  position: fixed;
  width:50px;
  height:50px;
  bottom: 30px;
  right: 20px;
}

.contain {
  display: flex;
  flex-direction: column; 
  margin-top: 10rpx;
}

.info_text_title {
  font-family: PingFang SC;
  font-weight: 400;
  font-size: 50rpx;
  margin-bottom: 10rpx;
  font-weight: 400;
  padding: 0rpx 25rpx;
} 

.info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 30rpx;
  padding: 0rpx 25rpx;
}

.info_item {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-bottom: 28rpx;
  background-color: #f6f6f6;
  width: 100%;
  z-index: 2;
  height: 200rpx;
  top: 0%;
}

.search{  
  width: 96%;
  margin: 0 auto;
  margin-top: 150rpx;
  background-color: white;
}  

.search_arr {
  background-color: white;  
  border: 1px solid #d0d0d0;  
  border-radius: 25rpx;  
  margin: 12rpx 15rpx 0rpx 15rpx;
}  

.search_arr input{  
  height: 70rpx;  
  border-radius: 10px;  
  display: flex;
  flex-direction: row;
  align-items: center;
}  

.bc_text {  
  line-height: 68rpx;  
  height: 68rpx;  
  margin-top: 34rpx;  
}  
  
.sousuo {  
  margin-left: 15rpx;  
  width: 15%;  
  line-height: 150%;  
  text-align: center;  
  border: 1px solid #d0d0d0;  
  border-radius: 20rpx;  
}  

.page_row{  
  margin-top: 150rpx;
  display: flex;  
  flex-direction: row;
}

.searchcion {  
  position: absolute;  
  padding: 5px;
  z-index: 1;  
  width: 15px;  
  height: 15px;  
  text-align: center;  
  align-items: center;
}  

._input {
  margin-left: 80rpx;
}

.imageStyle {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.ToDoImageStyle {
  font-family: PingFang SC;
  font-weight: 510;
  display: flex;
  flex-direction: column;
  align-items: center;   
  justify-items: center;
  margin-top: 45%;
}

.imagesize { 
  width:300rpx;
  height:300rpx;
}

.ToDoStyle {
  font-family: PingFang SC;
  font-weight: 510;
  display: flex;
  flex-direction: column;
  align-items: center;   
  justify-items: center;
  margin-top: 10rpx;
}

.power {
  margin-top: 30rpx;
  border-radius: 15px;
  background-color: white;
  width: 93%;
  padding-bottom: 30rpx;
}

.power_info_text {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 20rpx;
  overflow: hidden;
  word-break: break-word;
}

.power_info_text_title {
  margin-top: 15rpx;
  font-weight: 400;
  font-size: 35rpx;
}

.power_info_text_tip {
  margin-top: 25rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
  margin-left: 20rpx;
}