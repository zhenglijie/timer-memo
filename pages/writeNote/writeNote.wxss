/* pages/writeNote/writeNote.wxss */
._input {
    font-size: 60rpx;
    padding-left: 30rpx;
    height: 150rpx;
}

.showTime {
    font-size: 30rpx;
    padding-left: 30rpx;
    color: #A9A9A9;
}

.contain {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
} 

.textareaStyle {
    margin-top: 20rpx;
    padding: 30rpx;
}

.row {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

page{
    width: 100%;
    height: 100%;
}
.container{
    flex-flow:column nowrap;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    display: flex;
}

.title{
    margin: 15rpx 5%;
    width: 90%;
    text-align: left;
    height: 75rpx;
    font-size: 43rpx;
    border-bottom: 1px solid #f5f5f5;
}
.row{
    flex: 1;
    display: flex;
    width: 90%;
    height:90%;
    margin: 0 5%;
    overflow: hidden;
}
.row .text{
    flex: 1;
    width: 100%;
    height: 90%;
    font-size: 16px;
    line-height: 26px;
    color: #000000;    
    border: solid 1px black;
    border-radius: 10rpx;
    padding: 15rpx;
}
.date{
    padding: 5rpx 0;
}
.bottom{
    width: 100%;
    background: #fafafa;
    display: flex;
    /* flex-flow:row nowrap; */
    justify-content: center;
    align-items: center;
    border-top:1px solid #d9d9d9;
}

.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
}
.btn.success{
    color: #fff;
    border-radius: 20px;
    background: linear-gradient(to right,#eebd89, #d13abd );
}
.btn.del{
    background: linear-gradient(to right,#eebd89, #d13abd );
    border-radius: 20px;
    color: #fff;
}

.btn-hover{
    position: relative;
    top: 3rpx;
    box-shadow:0px 0px 8px #999 inset; 
  }

  .plain-hover{
    position: relative;
    top: 3rpx;
    box-shadow:0px 0px 10px #bbbec4 inset; 
  }
  